<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/img_ebook_imag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/img_ebook_shadow"
            android:layout_width="@dimen/img_ebook_shadow_width"
            android:layout_height="@dimen/img_ebook_shadow_hight"
            android:background="#66000000"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/img_ebook_cover"
            android:layout_width="@dimen/img_ebook_cover_width"
            android:layout_height="@dimen/img_ebook_cover_hight"
            android:scaleType="fitXY" />
    </RelativeLayout>

</LinearLayout>