<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WhiteBackground">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="?attr/colorPrimary"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                app:layout_scrollFlags="scroll|enterAlways"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:theme="@style/Theme.MyMaterial">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="2"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:weightSum="7">

                        <com.porar.ebooks.widget.AdjustableImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:padding="35dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_action_settings"
                            android:visibility="invisible" />

                        <com.porar.ebooks.widget.AdjustableImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:padding="10dp"
                            android:scaleType="centerCrop" />

                        <com.porar.ebooks.widget.AdjustableImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:adjustViewBounds="true"
                            android:padding="25dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/nav_logo_new2x" />

                        <com.porar.ebooks.widget.AdjustableImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:padding="10dp"
                            android:scaleType="centerCrop" />

                        <com.porar.ebooks.widget.AdjustableImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:padding="30dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_action_search"
                            android:visibility="invisible" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:orientation="horizontal"
                        android:weightSum="7">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <com.porar.ebooks.widget.AdjustableImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:adjustViewBounds="true"
                                android:scaleType="centerCrop"
                                android:src="@drawable/banner_stou" />
                        </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>


            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="4">

                <com.porar.ebooks.widget.AdjustableImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:padding="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/welcome_stou" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/background_main_mode">

                    <com.porar.ebooks.widget.AdjustableImageView
                        android:id="@+id/login_public_user_imageview"
                        android:layout_width="600dp"
                        android:layout_height="230dp"
                        android:layout_centerInParent="true"
                        android:adjustViewBounds="true"
                        android:padding="30dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/button_public_user_login" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.porar.ebooks.widget.AdjustableImageView
                        android:id="@+id/login_bachelor_degree_imageview"
                        android:layout_width="600dp"
                        android:layout_height="230dp"
                        android:layout_centerInParent="true"
                        android:adjustViewBounds="true"
                        android:padding="30dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/button_bechalor_degree_login" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/background_main_mode">

                    <com.porar.ebooks.widget.AdjustableImageView
                        android:id="@+id/login_master_degree_imageview"
                        android:layout_width="600dp"
                        android:layout_height="230dp"
                        android:layout_centerInParent="true"
                        android:adjustViewBounds="true"
                        android:padding="30dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/button_master_degree_login" />
                </RelativeLayout>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>


</LinearLayout>