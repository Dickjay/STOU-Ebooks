<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/prelativeLayout1_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp" >

        <RelativeLayout
            android:id="@+id/pPlinearImage_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <WebView
                android:id="@+id/img_ebook_pcover_comment"
                android:layout_width="@dimen/icon_head"
                android:layout_height="@dimen/icon_head"
                android:layout_centerInParent="true"
                android:scaleType="fitXY" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/pPlinearName_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/pPlinearImage_comment"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/ptxtName_Sebook_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:singleLine="false"
                android:text="name"
                android:textColor="@color/tabDark"
                android:textSize="@dimen/small" />

            <ScrollView
                android:id="@+id/scrollView1_comment"
                android:layout_width="match_parent"
                android:layout_height="@dimen/img_publisher_dialogcover_width" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/ptxtcomment_Sebook_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/typebar_padding_top"
                        android:text="comment"
                        android:textColor="@color/tabDark"
                        android:textSize="@dimen/small" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pPlineardate_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/ptxtdate_Sebook_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="date"
                android:textSize="@dimen/small" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>