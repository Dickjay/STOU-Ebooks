<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/publisher_mainlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_default"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/publisher_rt_main_phone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <RelativeLayout
            android:id="@+id/publisher_rt_main_head_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ebook_rt_head_hight"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/bg_nav2xrepeat2" >

            <ImageView
                android:id="@+id/publisher_image_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/nav_logo_new2x" />

            <ImageView
                android:id="@+id/publisher_image_prefresh"
                android:layout_width="@dimen/icon_head"
                android:layout_height="@dimen/icon_head"
                android:layout_centerVertical="true"
                android:padding="@dimen/icon_padding"
                android:src="@drawable/picon_replay" />

            <ImageView
                android:id="@+id/publisher_image_psearch"
                android:layout_width="@dimen/icon_head"
                android:layout_height="@dimen/icon_head"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/icon_padding"
                android:src="@drawable/picon_search" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/publisher_rt_typebar_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/publisher_rt_main_head_phone"
            android:background="#2f2f2f"
            android:paddingBottom="@dimen/typebar_padding_top"
            android:paddingLeft="@dimen/typebar_padding_right"
            android:paddingRight="@dimen/typebar_padding_right"
            android:paddingTop="@dimen/typebar_padding_top" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/tabview_btn_publisher_pupadate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/green_buttonby_tab"
                    android:gravity="center"
                    android:text="Update"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/small" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/tabview_btn_publisher_precommend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/green_buttonby_tab"
                    android:gravity="center"
                    android:text="Hot"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/small" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/tabview_btn_publisher_pname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/green_buttonby_tab"
                    android:gravity="center"
                    android:text="Name"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/small" />
            </LinearLayout>
        </LinearLayout>

        <ListView
            android:id="@+id/publisher_plistview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/publisher_rt_typebar_phone" >
        </ListView>
    </RelativeLayout>

</RelativeLayout>