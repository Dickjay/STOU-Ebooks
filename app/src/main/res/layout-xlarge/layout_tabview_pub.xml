<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/black_button" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/tabview_btn_updatePub"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ebook_btn_type_hight"
                android:background="@drawable/black_buttonby_tab"
                android:gravity="center"
                android:text="@string/publisher_update"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/small" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/tabview_btn_recommendPub"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ebook_btn_type_hight"
                android:background="@drawable/black_buttonby_tab"
                android:gravity="center"
                android:text="@string/publisher_recommend"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/small" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/tabview_btn_namePub"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ebook_btn_type_hight"
                android:background="@drawable/black_buttonby_tab"
                android:gravity="center"
                android:text="@string/publisher_name"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/small" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>