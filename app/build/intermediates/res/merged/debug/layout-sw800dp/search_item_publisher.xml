<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp" >

        <LinearLayout
            android:id="@+id/PlinearImageP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_publisher"
                android:layout_width="85dp"
                android:layout_height="65dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/PlinearNameP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/PlinearImageP"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtpublishet_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:singleLine="true"
                android:text="publisher"
                android:textColor="@color/tabDark"
                android:textSize="@dimen/small" />

            <TextView
                android:id="@+id/txtpublishet_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:singleLine="true"
                android:text="detail"
                android:textColor="@color/tabDark"
                android:textSize="@dimen/small" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/PlinearArrowP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="@dimen/ebook_linear_head_marginLeft"
                android:layout_height="@dimen/ebook_linear_head_marginLeft"
                android:src="@drawable/arrow_grey2x" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/PlinearPriceP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/PlinearArrowP"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtpublishet_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="Count"
                android:textColor="#FF0000"
                android:textSize="@dimen/small" />

        </LinearLayout>
    </RelativeLayout>

