<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/category_mainlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_default"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/category_rt_main_phone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <RelativeLayout
            android:id="@+id/category_rt_main_head_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ebook_rt_head_hight"
            android:background="@drawable/bg_nav2xrepeat2" >

            <ImageView
                android:id="@+id/catrgory_image_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/nav_logo_new2x" />

            <ImageView
                android:id="@+id/category_image_back"
                android:layout_width="@dimen/icon_head"
                android:layout_height="@dimen/icon_head"
                android:layout_alignParentLeft="false"
                android:layout_alignParentTop="false"
                android:layout_centerVertical="true"
                android:padding="@dimen/icon_padding"
                android:src="@drawable/navigation_back" />

            <ImageView
                android:id="@+id/category_image_backdummy"
                android:layout_width="@dimen/icon_head"
                android:layout_height="@dimen/icon_head"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/icon_padding"
                android:src="@drawable/navigation_back"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/categorty_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/category_image_backdummy"
                android:layout_toRightOf="@+id/category_image_back"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:text="Category"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/WhiteBackground"
                android:textSize="@dimen/big_title"
                android:textStyle="bold" />

        </RelativeLayout>

        <ListView
            android:id="@+id/category_listView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/category_rt_main_head_phone" >
        </ListView>
    </RelativeLayout>

