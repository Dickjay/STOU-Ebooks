<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/prelativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp" >

        <RelativeLayout
            android:id="@+id/pPlinearImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_publisher_pshadow"
                android:layout_width="@dimen/img_publisher_shadow_width"
                android:layout_height="@dimen/img_publisher_shadow_hight"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_comment_text"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/img_publisher_pcover"
                android:layout_width="@dimen/img_publisher_cover_width"
                android:layout_height="@dimen/img_publisher_cover_hight"
                android:layout_centerInParent="true"
                android:scaleType="centerInside" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/pPlinearName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/pPlinearImage"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/ptxtPublisherName_Sebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="false"
                android:text="eBook"
                android:textColor="@color/tabDark"
                android:textSize="@dimen/small" />

            <TextView
                android:id="@+id/ptxtPublisherDetail_Sebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/typebar_padding_top"
                android:ellipsize="end"
                android:lines="2"
                android:text="Detail"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/small" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pPlinearPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/pPlinearImage"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/ptxtISSUE_Sebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="ISSUE"
                android:textColor="#FF0000"
                android:textSize="@dimen/small" />
        </LinearLayout>
    </RelativeLayout>

