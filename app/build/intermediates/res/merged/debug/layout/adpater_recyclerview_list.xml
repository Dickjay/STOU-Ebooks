<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/Tab_bottom"
            android:gravity="center_horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.porar.ebooks.widget.AdjustableImageView
                    android:id="@+id/img_shelf_pshadow"
                    android:layout_width="@dimen/img_ebook_shadow_width"
                    android:layout_height="@dimen/img_ebook_shadow_hight"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:background="#66000000"
                    android:scaleType="centerCrop" />

                <com.porar.ebooks.widget.AdjustableImageView
                    android:id="@+id/img_shelf_pcover"
                    android:layout_width="@dimen/img_ebook_cover_width"
                    android:layout_height="@dimen/img_ebook_cover_hight"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop" />

                <com.porar.ebooks.widget.AdjustableImageView
                    android:id="@+id/img_shelf_covershine"
                    android:layout_width="@dimen/img_ebook_cover_width"
                    android:layout_height="@dimen/img_ebook_cover_hight"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/cover_logoshine2x" />

                <RelativeLayout
                    android:id="@+id/pshelf_Image_dummy"
                    android:layout_width="@dimen/img_ebook_cover_width"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/img_shelf_covershine"
                    android:layout_alignTop="@+id/img_shelf_covershine"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.porar.ebooks.widget.AdjustableImageView
                        android:id="@+id/img_shelf_bookmark_green"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icon_bookmark_greensmall" />

                    <com.porar.ebooks.widget.AdjustableImageView
                        android:id="@+id/img_shelf_bookmark_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icon_bookmark_redsmall" />

                    <TextView
                        android:id="@+id/img_shelf_txt_bookmark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/WhiteBackground"
                        android:textSize="@dimen/normal" />

                    <com.porar.ebooks.widget.AdjustableImageView
                        android:id="@+id/deleted_ebooks_imageview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icon_delete"
                        android:visibility="invisible" />

                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

