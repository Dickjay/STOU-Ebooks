<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shelf_mainlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/shelf_rt_main_phone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <RelativeLayout
            android:id="@+id/shelf_rt_main_head_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ebook_rt_head_hight"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/green_stou" >

            <ImageView
                android:id="@+id/shelf_image_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/nav_logo_new2x" />

            <ImageView
                android:id="@+id/shelf_image_prefresh"
                android:layout_width="@dimen/icon_head"
                android:layout_height="@dimen/icon_head"
                android:layout_centerVertical="true"
                android:padding="@dimen/icon_padding"
                android:src="@drawable/ic_refreshs" />

            <ImageView
                android:id="@+id/shelf_image_pdelete"
                android:layout_width="@dimen/icon_head"
                android:layout_height="@dimen/icon_head"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/shelf_image_prefresh"
                android:padding="@dimen/icon_padding"
                android:src="@drawable/content_discard" />

            <ImageView
                android:id="@+id/shelf_image_pImageProfile"
                android:layout_width="@dimen/icon_head"
                android:layout_height="@dimen/icon_head"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/icon_padding"
                android:src="@drawable/icon_user100" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/shelf_rt_typebar_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/shelf_rt_main_head_phone"
            android:background="#2f2f2f"
            android:paddingBottom="@dimen/typebar_padding_top"
            android:paddingLeft="@dimen/typebar_padding_right"
            android:paddingRight="@dimen/typebar_padding_right"
            android:paddingTop="@dimen/typebar_padding_top" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/shelf_tabview_btn_pnew"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/green_buttonby_tab"
                    android:gravity="center"
                    android:text="หนังสือทั้งหมด"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/small" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/shelf_tabview_btn_pfavorite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/green_buttonby_tab"
                    android:gravity="center"
                    android:text="หนังสือเล่มโปรด"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/small" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/shelf_tabview_btn_ptrash"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/green_buttonby_tab"
                    android:gravity="center"
                    android:text="หนังสือถูกลบ"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/small" />
            </LinearLayout>
        </LinearLayout>

        <ListView
            android:id="@+id/shelf_plistview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/shelf_rt_typebar_phone" >
        </ListView>
    </RelativeLayout>

