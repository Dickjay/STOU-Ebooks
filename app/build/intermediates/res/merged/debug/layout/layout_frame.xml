<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tabDark"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >

            <RelativeLayout
                android:id="@+id/frame_rt_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" >

                <ImageView
                    android:id="@+id/frame_image_main_sw"
                    android:layout_width="@dimen/quote_width"
                    android:layout_height="@dimen/quote_hight"
                    android:scaleType="fitXY" />

                <it.sephiroth.android.library.imagezoom.ImageViewTouch_Crop
                    android:id="@+id/frame_image_crop"
                    android:layout_width="@dimen/quote_width"
                    android:layout_height="@dimen/quote_hight" />

                <com.porar.drag.DragLayer
                    android:id="@+id/frame_draglayer"
                    android:layout_width="@dimen/quote_width"
                    android:layout_height="@dimen/quote_hight" >

                    <LinearLayout
                        android:id="@+id/frame_linear_covertxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/frame_image_cover"
                            android:layout_width="@dimen/quoteimg_ebook_cover_width"
                            android:layout_height="@dimen/quoteimg_ebook_cover_hight"
                            android:scaleType="fitXY" />

                        <TextView
                            android:id="@+id/frame_drag_textview_Name"
                            android:layout_width="@dimen/quote_width_name"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:ellipsize="end"
                            android:text="Name"
                            android:textColor="@color/tabDark"
                            android:textSize="@dimen/small" />
                    </LinearLayout>
                </com.porar.drag.DragLayer>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/frame_rt_locationdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/frame_rt_main"
                android:layout_alignLeft="@+id/frame_rt_main"
                android:layout_alignRight="@+id/frame_rt_main"
                android:layout_alignTop="@+id/frame_rt_main" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/frame_textview_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="location"
                        android:textColor="@color/tabDark"
                        android:textSize="@dimen/normal" />

                    <TextView
                        android:id="@+id/frame_textview_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="date"
                        android:textColor="@color/tabDark"
                        android:textSize="@dimen/small" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>

