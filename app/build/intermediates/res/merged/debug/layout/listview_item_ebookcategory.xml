<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/prelativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp" >

        <RelativeLayout
            android:id="@+id/pPlinearImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_category_pshadow"
                android:layout_width="@dimen/img_ebookcategory_shadow_width"
                android:layout_height="@dimen/img_ebookcategory_shadow_hight"
                android:layout_centerInParent="true"
                android:background="#66000000"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/img_category_pcover"
                android:layout_width="@dimen/img_ebookcategory_cover_width"
                android:layout_height="@dimen/img_ebookcategory_cover_hight"
                android:layout_centerInParent="true"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/img_category_covershine"
                android:layout_width="@dimen/img_ebookcategory_cover_width"
                android:layout_height="@dimen/img_ebookcategory_cover_hight"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@drawable/cover_logoshine2x" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/pPlinearName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/pPlinearImage"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/ptxtName_Scategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="false"
                android:text="eBook"
                android:textColor="@color/tabDark"
                android:textSize="@dimen/small" />

            <TextView
                android:id="@+id/ptxtPublisher_Scategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/typebar_padding_top"
                android:ellipsize="end"
                android:lines="1"
                android:singleLine="true"
                android:text="Publisher"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/small" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pPlinearPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="@dimen/star_hight_24"
                android:layout_height="@dimen/star_hight_24"
                android:src="@drawable/navigation_next_item" />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout><!-- From: file:/D:/AndroidStudio_WorkSpace/Workspace%20STOU/PROJECT-STOU%20-%20VersionCode-16and%20VersionName-2.1.3/app/src/main/res/layout/listview_item_ebookcategory.xml -->