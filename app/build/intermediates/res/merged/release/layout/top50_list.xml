<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WhiteBackground"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/icon_padding" >

        <RelativeLayout
            android:id="@+id/rt_top50_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" >

            <ImageView
                android:id="@+id/top50_imageViewprize"
                android:layout_width="@dimen/icon_head"
                android:layout_height="@dimen/icon_head"
                android:layout_centerInParent="true"
                android:src="@drawable/bg_prize" />

            <TextView
                android:id="@+id/top50_txt_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:paddingBottom="15dp"
                android:text="9"
                android:textSize="@dimen/small"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rt_image_top50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/rt_top50_left" >

            <ImageView
                android:id="@+id/top50_img_ebook_pshadow"
                android:layout_width="@dimen/img_ebook_shadow_width"
                android:layout_height="@dimen/img_ebook_shadow_hight"
                android:layout_alignParentLeft="false"
                android:layout_alignParentTop="false"
                android:layout_centerHorizontal="true"
                android:background="#66000000"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/top50_img_ebook_pcover"
                android:layout_width="@dimen/img_ebook_cover_width"
                android:layout_height="@dimen/img_ebook_cover_hight"
                android:layout_alignParentLeft="false"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/top50_img_ebook_covershine"
                android:layout_width="@dimen/img_ebook_cover_width"
                android:layout_height="@dimen/img_ebook_cover_hight"
                android:layout_alignParentLeft="false"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/cover_logoshine2x" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/pPlinearName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/rt_image_top50"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/top50_ptxtName_Sebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="false"
                android:text="eBook"
                android:textColor="@color/tabDark"
                android:textSize="@dimen/small" />

            <TextView
                android:id="@+id/top50_ptxtPublisher_Sebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/typebar_padding_top"
                android:ellipsize="end"
                android:lines="1"
                android:singleLine="true"
                android:text="Publisher"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/small" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pPlinearPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/rt_image_top50"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/top50_ptxtPrice_Sebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="Price"
                android:textColor="#FF0000"
                android:textSize="@dimen/small" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pPlinearStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/rt_image_top50"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/rt_image_top50"
            android:orientation="vertical" >

            <RatingBar
                android:id="@+id/top50_pRating_Sebook"
                style="@style/customRatingBar24"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/star_hight_24"
                android:numStars="5"
                android:rating="0.0"
                android:stepSize="0.5" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout><!-- From: file:/D:/AndroidStudio_WorkSpace/Workspace%20STOU/PROJECT-STOU%20-%20VersionCode-16and%20VersionName-2.1.3/app/src/main/res/layout/top50_list.xml -->