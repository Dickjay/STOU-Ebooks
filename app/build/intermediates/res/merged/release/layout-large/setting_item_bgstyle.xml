<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp" >

        <LinearLayout
            android:id="@+id/PlinearImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/ivCover_setting"
                android:layout_width="84dp"
                android:layout_height="84dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/PlinearName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/PlinearImage"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtName_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:singleLine="true"
                android:text="name"
                android:textColor="@color/tabDark"
                android:textSize="@dimen/normal" />

            <TextView
                android:id="@+id/txtName_setting2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:singleLine="true"
                android:text="name"
                android:textSize="@dimen/small" />
        </LinearLayout>
    </RelativeLayout>

