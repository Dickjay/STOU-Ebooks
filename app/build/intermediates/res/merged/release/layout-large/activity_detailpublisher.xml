<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/detailpublisher_linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/detailpublisher_linear_height"
        android:background="@drawable/bg_publisher_dark2x"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/detailpublisher_rt_cover_covers"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <HorizontalScrollView
                android:id="@+id/detailpublisher_horizontalScrollView_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:id="@+id/detailpublisher_linear_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/detailpublisher_marginLeft"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/detailpublisher_textVie_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textColor="@color/WhiteBackground"
                        android:textSize="@dimen/big" />
                </LinearLayout>
            </HorizontalScrollView>

            <RelativeLayout
                android:id="@+id/detailpublisher_linear_cover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detailpublisher_horizontalScrollView_name"
                android:layout_marginLeft="@dimen/detailpublisher_marginLeft"
                android:background="#FFFFFF"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/detailpublisher_imageview_shadow"
                    android:layout_width="@dimen/img_publisher_dialogshadow_width"
                    android:layout_height="@dimen/img_publisher_dialogshadow_hight"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg_publisher_logo" />

                <ImageView
                    android:id="@+id/detailpublisher_imageview_cover"
                    android:layout_width="@dimen/img_publisher_dialogcover_width"
                    android:layout_height="@dimen/img_publisher_dialogcover_hight"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside" />
            </RelativeLayout>

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detailpublisher_linear_cover"
                android:layout_marginLeft="@dimen/detailpublisher_marginLeft"
                android:layout_marginTop="2dp" >

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/detailpublisher_textView1ebook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minEms="5"
                        android:text="ebooks"
                        android:textColor="@color/WhiteBackground"
                        android:textSize="@dimen/small" />

                    <TextView
                        android:id="@+id/detailpublisher_textView2ebook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="999"
                        android:textColor="@color/WhiteBackground"
                        android:textSize="@dimen/small" />

                </TableRow>

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/detailpublisher_textView1download"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minEms="5"
                        android:text="downloads"
                        android:textColor="@color/WhiteBackground"
                        android:textSize="@dimen/small" />

                    <TextView
                        android:id="@+id/detailpublisher_textView2download"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9,000,000"
                        android:textColor="@color/WhiteBackground"
                        android:textSize="@dimen/small" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/detailpublisher_textView1fan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minEms="5"
                        android:text="fans"
                        android:textColor="@color/WhiteBackground"
                        android:textSize="@dimen/small" />

                    <TextView
                        android:id="@+id/detailpublisher_textView2fan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="999"
                        android:textColor="@color/WhiteBackground"
                        android:textSize="@dimen/small" />
                </TableRow>
            </TableLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/detailpublisher_rt_covers_textdetail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/detailpublisher_marginRight"
            android:layout_weight="1" >

            <ScrollView
                android:id="@+id/detailpublisher_VerScrollView_detail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/scroll_detail" >

                <LinearLayout
                    android:id="@+id/detailpublisher_linear_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/detailpublisher_textVie_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Detail"
                        android:textColor="@color/WhiteBackground"
                        android:textSize="@dimen/normal" />
                </LinearLayout>
            </ScrollView>

            <Button
                android:id="@+id/detailpublisher_button_brcomefan"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_buy_hight"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/detailpublisher_marginLeft"
                android:background="@drawable/orange_button_large"
                android:singleLine="true"
                android:text="@string/become_fan"
                android:textColor="@color/WhiteBackground"
                android:textSize="@dimen/normal" />
        </RelativeLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/detailpublisher_listview_ebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout><!-- From: file:/D:/AndroidStudio_WorkSpace/Workspace%20STOU/PROJECT-STOU%20-%20VersionCode-16and%20VersionName-2.1.3/app/src/main/res/layout-large/activity_detailpublisher.xml -->