<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/prelativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <RelativeLayout
            android:id="@+id/pPlinearImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_ebook_pshadow"
                android:layout_width="@dimen/img_ebook_shadow_width"
                android:layout_height="@dimen/img_ebook_shadow_hight"
                android:layout_centerInParent="true"
                android:background="#66000000"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/img_ebook_pcover"
                android:layout_width="@dimen/img_ebook_cover_width"
                android:layout_height="@dimen/img_ebook_cover_hight"
                android:layout_centerInParent="true"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/img_ebook_covershine"
                android:layout_width="@dimen/img_ebook_cover_width"
                android:layout_height="@dimen/img_ebook_cover_hight"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@drawable/cover_logoshine2x" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/pPlinearName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/pPlinearImage"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ptxtName_Sebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="false"
                android:text="eBook"
                android:textColor="@color/tabDark"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/ptxtPublisher_Sebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/typebar_padding_top"
                android:ellipsize="end"
                android:lines="1"
                android:singleLine="true"
                android:text="Publisher"
                android:textColor="@android:color/darker_gray"
                android:textSize="18sp" />

            <RatingBar
                android:id="@+id/pRating_Sebook"
                style="@style/customRatingBar16"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/star_hight_24"
                android:numStars="5"
                android:rating="0.0"
                android:stepSize="0.5" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/pPlinearPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ptxtPrice_Sebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="Price"
                android:textColor="@color/red_dark_stou"
                android:textSize="30sp" />
        </LinearLayout>


    </RelativeLayout>


</LinearLayout><!-- From: file:/D:/AndroidStudio_WorkSpace/Workspace%20STOU/PROJECT-STOU%20-%20VersionCode-16and%20VersionName-2.1.3/app/src/main/res/layout-sw800dp/listview_item_ebook.xml -->