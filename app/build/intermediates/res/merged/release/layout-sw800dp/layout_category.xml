<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="@dimen/category_layout_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/category_layout_marginLeft"
        android:layout_marginRight="@dimen/category_layout_marginRight"
        android:padding="5dp" >

        <LinearLayout
            android:id="@+id/category_linear_cover"
            android:layout_width="@dimen/category_linear_cover_width"
            android:layout_height="@dimen/category_linear_cover_hight"
            android:orientation="vertical" 
            android:visibility="visible">

            <ImageView
                android:id="@+id/category_image_cover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/category_linear_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/category_linear_cover"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/category_txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Name"
                android:textColor="@color/tabDark"
                android:textSize="@dimen/small" />

            <TextView
                android:id="@+id/category_txt_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Detail"
                android:visibility="visible" />

        </LinearLayout>
    </RelativeLayout>

